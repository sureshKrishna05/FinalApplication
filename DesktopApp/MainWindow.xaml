<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="800" 
        Width="1400"
        MinHeight="600"
        MinWidth="1100"        
        Topmost="True"
        WindowStyle="SingleBorderWindow"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>



        <Style x:Key="font_style" TargetType="TextBlock">

            <Setter Property="FontFamily"
                    Value="Fonts/Roboto-Light.ttf #Roboto"/>

            <Setter Property="VerticalAlignment"
                    Value="Center"/>

            <Setter Property="HorizontalAlignment"
                    Value="Left"/>

            <Setter Property="Foreground"
                    Value="White"/>

            <Setter Property="FontSize"
                    Value="20"/>
        </Style>

        <!--// Tooltip Style Template //-->

        <Style TargetType="ToolTip" x:Key="tt_style">

            <Setter Property="Placement" Value="Right"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Background" Value="#4A5668"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Fonts/Roboto-Light.ttf #Roboto"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="PlacementRectangle" Value="60,0,0,0"/>
            <Setter Property="HorizontalOffset" Value="15"/>
            <Setter Property="VerticalOffset" Value="6"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>

        </Style>

    </Window.Resources>

    <Grid>

        <!--// Background Color //-->

        <Grid Background="#E9E9E9">

            <!--// Background Image //-->

            <Grid x:Name="BG" PreviewMouseLeftButtonDown="BG_PreviewMouseLeftButtonDown">


            </Grid>

            <!--// App Close Button //-->

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="0"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


            </Grid>
            <Grid x:Name="TextGrid"
                Margin="250,0,800,950">
                <TextBlock x:Name="Header"
                           Text=" "
                           FontSize="30"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="#0A4967"
                           FontWeight="Bold"
                           FontFamily="Montserrat"/>
            </Grid>


            <Grid x:Name="contentArea"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="250,80,20,0"
>
            </Grid>
            <!--// Navigation Panel //-->

            <Grid   x:Name="nav_pnl"
                    HorizontalAlignment="Left"
                    Width="230"
                    Background="#31708E">

                <StackPanel x:Name="st_pnl">

                    <!--// Grid for the Menu Toggle Button //-->

                    <Grid Height="90">

                        <!--// Menu title text //-->

                        <TextBlock  Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="30,-20,0,0"
                                    Text="SS ACCOUNTING"
                                    Foreground="White"
                                    FontSize="22"
                                    Background="Transparent"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource font_style}">
                            
                            <!--// Shadow Effect //-->

                            <TextBlock.Effect>

                                <DropShadowEffect  BlurRadius="10"
                                                   ShadowDepth="1"
                                                   Direction="-90"
                                                   Color="White"/>

                            </TextBlock.Effect>

                        </TextBlock>


                    </Grid>

                    <!--// ListView with menu list items //-->

                    <ListView  x:Name="LV"
                               Background="Transparent"
                               BorderBrush="Transparent"
                               ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <!--// Home //-->

                        <ListViewItem x:Name="DashboardButton"
                                      HorizontalAlignment="Left"
                                      Tag="DashBoard"
                                      Margin="0,0,0,15" 
                                      PreviewMouseLeftButtonUp="LVItemClick">

                            <StackPanel Orientation="Horizontal"
                                        Width="230">

                                <Image Source="/assets/Dashboard.png"
                                       Stretch="Fill"
                                       Height="20"
                                       Width="20"
                                       Margin="12,0,0,0"/>

                                <TextBlock Text="Dashboard"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource font_style}"/>

                            </StackPanel>

                            <!--// Tooltip //-->

                            <ListViewItem.ToolTip>

                                <ToolTip x:Name="tt_home"
                                         Content="Dashboard"
                                         Style="{StaticResource tt_style}"/>

                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!--// Contacts //-->

                        <ListViewItem HorizontalAlignment="Left"
                                      Tag="Billing"
                                      Margin="0,0,0,15"
                                      PreviewMouseLeftButtonUp="LVItemClick">

                            <StackPanel Orientation="Horizontal"
                                        Width="230">

                                <Image Source="/assets/Billing.png"
                                       Stretch="UniformToFill"
                                       Height="30"
                                       Width="20"
                                       Margin="12,0,0,0"/>

                                <TextBlock Text="Billing"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource font_style}"/>

                            </StackPanel>

                            <!--// Tooltip //-->

                            <ListViewItem.ToolTip>

                                <ToolTip x:Name="tt_contacts"
                                         Content="Billing"
                                         Style="{StaticResource tt_style}"/>

                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!--// Messages //-->

                        <ListViewItem HorizontalAlignment="Left"
                                      Tag="History"
                                      Margin="0,0,0,15" 
                                      PreviewMouseLeftButtonUp="LVItemClick">

                            <StackPanel Orientation="Horizontal"
                                        Width="230">

                                <Image Source="/assets/History.png"
                                       Stretch="None"
                                       Margin="12,0,0,0"/>

                                <TextBlock Text="History"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource font_style}"/>

                            </StackPanel>

                            <!--// Tooltip //-->

                            <ListViewItem.ToolTip>

                                <ToolTip x:Name="tt_messages"
                                         Content="History"
                                         Style="{StaticResource tt_style}"/>

                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!--// Maps //-->

                        <ListViewItem HorizontalAlignment="Left"
                                      Tag="Invoice"
                                      Margin="0,0,0,15" 
                                      PreviewMouseLeftButtonUp="LVItemClick">

                            <StackPanel Orientation="Horizontal"
                                        Width="230">

                                <Image Source="/assets/Invoice.png"
                                       Stretch="None"
                                       Margin="12,0,0,0"/>

                                <TextBlock Text="Test(Customerentry)"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource font_style}"/>

                            </StackPanel>

                            <!--// Tooltip //-->

                            <ListViewItem.ToolTip>

                                <ToolTip x:Name="tt_maps"
                                         Content="Invoice"
                                         Style="{StaticResource tt_style}"/>

                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!--// Settings //-->

                        <ListViewItem HorizontalAlignment="Left"
                                      Tag="Stocks"
                                      Margin="0,0,0,15" 
                                      PreviewMouseLeftButtonUp="LVItemClick">

                            <StackPanel Orientation="Horizontal"
                                        Width="230">

                                <Image Source="/assets/Stocks.png"
                                       Stretch="None"
                                       Margin="12,0,0,0"/>

                                <TextBlock Text="Stocks"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource font_style}"/>

                            </StackPanel>

                            <!--// Tooltip //-->

                            <ListViewItem.ToolTip>

                                <ToolTip x:Name="tt_settings"
                                         Content="Stocks"
                                         Style="{StaticResource tt_style}"/>

                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!--// Sign Out //-->

                        <ListViewItem HorizontalAlignment="Left"
                                      Tag="Login"
                                      Margin="0,0,0,15" 
                                      PreviewMouseLeftButtonUp="LVItemClick">

                            <StackPanel Orientation="Horizontal"
                                        Width="230">

                                <Image Source="/assets/Login.png"
                                       Stretch="None"
                                       Margin="12,0,0,0"/>

                                <TextBlock Text="Login"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource font_style}"/>

                            </StackPanel>

                            <!--// Tooltip //-->

                            <ListViewItem.ToolTip>

                                <ToolTip x:Name="tt_signout"
                                         Content="Login"
                                         Style="{StaticResource tt_style}"/>

                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!--// Listview items style template //-->

                        <ListView.ItemContainerStyle>

                            <Style TargetType="ListViewItem">

                                <Setter Property="Template">

                                    <Setter.Value>

                                        <ControlTemplate TargetType="{x:Type ListViewItem}">

                                            <Border x:Name="Bd"
                                                    Height="50"
                                                    CornerRadius="10"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="True">

                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <!-- Mouse Over Trigger -->
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                    </MultiTrigger.Conditions>
                                                    <Setter Property="Background" TargetName="Bd" Value="#0A4967"/>
                                                    <Setter Property="BorderBrush" TargetName="Bd" Value="#0A4967"/>
                                                    <Setter Property="Cursor" TargetName="Bd" Value="Hand"/>
                                                </MultiTrigger>

                                                <!-- Selected Trigger -->
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" TargetName="Bd" Value="#0A4967"/>
                                                    <Setter Property="BorderBrush" TargetName="Bd" Value="#0A4967"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>

                                        </ControlTemplate>

                                    </Setter.Value>

                                </Setter>

                            </Style>

                        </ListView.ItemContainerStyle>

                    </ListView>
                </StackPanel>


                <Grid Height="90" VerticalAlignment="Bottom" Margin="5,410,5,0">
                    <Border Name="line" Background="#E9E9E9" 
                            Height="1" VerticalAlignment="Top"/>
                    <Button x:Name="Login"
                            Height="50"
                            Style="{StaticResource RoundedButton}"
                            BorderBrush="#E9E9E9"
                            BorderThickness="1"
                            Background="Transparent"
                            FontSize="20"
                            Cursor="Hand"
                            Click="LoginBtnClick">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image x:Name="loginImage" Source="/Assets/login.png" Width="24" Height="24" Margin="0,0,20,0"/>
                            <TextBlock x:Name="loginText" Text="Login" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

            </Grid>

        </Grid>

    </Grid>

</Window>
