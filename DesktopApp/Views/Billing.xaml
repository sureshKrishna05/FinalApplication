        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="0"
                                      x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#0A4967"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="1"
                Grid.RowSpan="3"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="2"
                CornerRadius="6"
                Margin="0,0,0,10"/>
        <!-- Header Line -->
        <Border Grid.Row="0"
                Height="2"
                Background="#0A4967"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"/>

        <!-- Search Box -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="2"
                CornerRadius="8"
                Padding="20"
                Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Party Name -->
                <TextBlock Text="Party Name  :" 
                           FontSize="20"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Margin="130,0,300,0"
                         Height="30"
                         MinWidth="150"
                         HorizontalAlignment="Stretch"
                         Style="{StaticResource RoundedTextBoxStyle}"
                         Tag="Party Name"/>

                <!-- Invoice No -->
                <TextBlock Grid.Column="1"
                           Grid.ColumnSpan="2"
                           Text="Invoice No :" 
                           Margin="250,0,0,0"
                           FontSize="20"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Column="1"
                         Grid.ColumnSpan="3"
                         Margin="370,0,150,0"
                         Height="30"
                         MinWidth="150"
                         HorizontalAlignment="Stretch"
                         Style="{StaticResource RoundedTextBoxStyle}"
                         Tag="Invoice No"/>

                <!-- Invoice Date -->
                <TextBlock Grid.Row="1"
                           Text="Invoice Date :" 
                           FontSize="20"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center" 
                           Margin="0,10,0,0"/>
                <TextBox Grid.Row="1"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Margin="130,10,300,0"
                         Height="30"
                         MinWidth="150"
                         HorizontalAlignment="Stretch"
                         Style="{StaticResource RoundedTextBoxStyle}"
                         Tag="Invoice Date"/>

                <!-- Search Button -->
                <Button Grid.Row="1"
                        Grid.Column="3"
                        Content="🔍 Search"
                        Background="#0A4967"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="5,10,0,0"
                        Width="100"
                        Style="{StaticResource RoundedButton}"
                        Height="30"/>
            </Grid>
        </Border>

        <!-- Search Tip -->
        <TextBlock Grid.Row="2"
                   Text="Search to find older orders"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   FontSize="12"
                   Margin="0,0,0,10"/>

        <!-- Recent Orders -->
        <StackPanel Grid.Row="2"
            Margin="20,50,20,0">
            <TextBlock Text="Recent Orders"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="Gray"
                       Margin="0,0,0,10"/>

            <Border CornerRadius="6"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    SnapsToDevicePixels="True"
                    Background="White">
                <DataGrid AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Height="250"
                          BorderThickness="0"
                          Background="White"
                          GridLinesVisibility="Horizontal"
                          RowBackground="White"
                          AlternatingRowBackground="#F9F9F9"
                          RowHeaderWidth="0"
                          HorizontalGridLinesBrush="#B5D2DB"
                          VerticalGridLinesBrush="#B5D2DB"
                          FontSize="14"
                          Padding="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order" Binding="{Binding Order}" Width="*" />
                        <DataGridTextColumn Header="Party" Binding="{Binding Party}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
