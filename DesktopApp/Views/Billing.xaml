<UserControl x:Class="DesktopApp.Views.Billing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="Transparent">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#0A4967"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Cursor="{TemplateBinding Cursor}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0,10,0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#0A4967" Height="2" Margin="0,0,0,20"/>

        <!-- Toggle Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
            <Button Content="Selling Bills" Width="250" Height="45" FontSize="16"
                    Style="{StaticResource RoundedButton}" Margin="10,0"/>
            <Button Content="Purchase Bills" Width="250" Height="45" FontSize="16"
                    Style="{StaticResource RoundedButton}" Background="#E9E9E9" Foreground="#0A4967" Margin="10,0"/>
        </StackPanel>

        <!-- Billing Table -->
        <Border Grid.Row="2" Background="White" BorderBrush="LightGray" BorderThickness="2"
                CornerRadius="6" Padding="20" Margin="0,0,0,20">
            <StackPanel>

                <!-- Table Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="PRODUCT NAME" Grid.Column="0" FontWeight="Bold"/>
                    <TextBlock Text="BATCH NO" Grid.Column="1" FontWeight="Bold"/>
                    <TextBlock Text="PAC" Grid.Column="2" FontWeight="Bold"/>
                    <TextBlock Text="QTY" Grid.Column="3" FontWeight="Bold"/>
                    <TextBlock Text="F/R" Grid.Column="4" FontWeight="Bold"/>
                    <TextBlock Text="EXP" Grid.Column="5" FontWeight="Bold"/>
                    <TextBlock Text="M.R.P" Grid.Column="6" FontWeight="Bold"/>
                    <TextBlock Text="P.T.R" Grid.Column="7" FontWeight="Bold"/>
                    <TextBlock Text="VALUE" Grid.Column="8" FontWeight="Bold"/>
                </Grid>

                <!-- Hidden Entry Grid -->
                <Grid Margin="0,10,0,0" Visibility="{Binding IsEntryVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0" Height="32" Margin="5"
                              ItemsSource="{Binding ProductList}"
                              SelectedItem="{Binding NewItem.Product}"/>

                    <TextBox Grid.Column="1" Margin="5" Style="{StaticResource RoundedTextBoxStyle}" Text="{Binding NewItem.BatchNo}"/>
                    <TextBox Grid.Column="2" Margin="5" Style="{StaticResource RoundedTextBoxStyle}" Text="{Binding NewItem.Pac}"/>
                    <TextBox Grid.Column="3" Margin="5" Style="{StaticResource RoundedTextBoxStyle}" Text="{Binding NewItem.Qty}"/>
                    <TextBox Grid.Column="4" Margin="5" Style="{StaticResource RoundedTextBoxStyle}" Text="{Binding NewItem.Fr}"/>
                    <TextBox Grid.Column="5" Margin="5" Style="{StaticResource RoundedTextBoxStyle}" Text="{Binding NewItem.Exp}"/>
                    <TextBox Grid.Column="6" Margin="5" Style="{StaticResource RoundedTextBoxStyle}" Text="{Binding NewItem.Mrp}"/>
                    <TextBox Grid.Column="7" Margin="5" Style="{StaticResource RoundedTextBoxStyle}" Text="{Binding NewItem.Ptr}"/>
                    <TextBox Grid.Column="8" Margin="5" Style="{StaticResource RoundedTextBoxStyle}" Text="{Binding NewItem.Value}"/>
                </Grid>

                <!-- Add Button -->
                <Button Content="+" Width="40" Height="35" Margin="5"
                        HorizontalAlignment="Left" Style="{StaticResource RoundedButton}"
                        Command="{Binding ToggleEntryVisibilityCommand}" />

                <!-- Totals -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" VerticalAlignment="Center">
                    <TextBlock Text="TOTAL :" FontSize="16" FontWeight="DemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding TotalAmount}" FontSize="16"/>
                </StackPanel>

                <!-- TAX -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="TAX CGST" VerticalAlignment="Center" FontSize="14" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="1" Width="60" Style="{StaticResource RoundedTextBoxStyle}"
                             Text="{Binding CGST}" FontSize="14"/>

                    <TextBlock Grid.Column="2" Text="SGST" VerticalAlignment="Center" FontSize="14" Margin="10,0,5,0"/>
                    <TextBox Grid.Column="3" Width="60" Style="{StaticResource RoundedTextBoxStyle}"
                             Text="{Binding SGST}" FontSize="14"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Print" Width="120" Height="40" Style="{StaticResource RoundedButton}" FontSize="18" Margin="10,0"
                    Command="{Binding PrintCommand}" />
            <Button Content="Clear" Width="120" Height="40" FontSize="18" Style="{StaticResource RoundedButton}"
                    Background="#E9E9E9" Foreground="#0A4967" Margin="10,0" Command="{Binding DownloadCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
