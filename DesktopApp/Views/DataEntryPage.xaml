<UserControl x:Class="DesktopApp.Views.DataEntryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="Transparent"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             MinWidth="600"
             MinHeight="400">

    <UserControl.Resources>
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#0A4967"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Outer container -->
        <Border Grid.Row="1"
                Grid.RowSpan="3"
                Background="Transparent"
                BorderThickness="2"
                CornerRadius="6"
                Margin="0,0,0,10"/>

        <!-- Header Line -->
        <Border Grid.Row="0"
                Height="2"
                Background="#0A4967"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"/>

        <!-- Main Input Block -->
        <!-- Main Input Block -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="2"
                CornerRadius="8"
                Padding="20,20,20,0"
                Margin="0,20,0,0"
                Grid.RowSpan="2"
                VerticalAlignment="Top" Height="270">
            <Grid Margin="20,0,0,0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Top"
                  Width="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0 -->
                <TextBlock Text="Company Name :" Grid.Row="0" Grid.Column="0" 
                           FontSize="20" FontWeight="DemiBold" Margin="0,0,5,40" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource RoundedTextBoxStyle}"
                         Height="38" Margin="160,0,100,40" x:Name="Name_company"/>

                <TextBlock Text="Contact Number :" Grid.Row="0" Grid.Column="3" 
                           FontSize="20" FontWeight="DemiBold" Margin="30,0,5,40" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" Style="{StaticResource RoundedTextBoxStyle}"
                         Height="38" Margin="200,0,100,40" x:Name="contact"/>

                <!-- Row 1 -->
                <TextBlock Text="GSTIN                 :" Grid.Row="1" Grid.Column="0"
                           FontSize="20" FontWeight="DemiBold" Margin="0,0,5,40" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource RoundedTextBoxStyle}"
                         Height="38" Margin="160,0,100,40"/>

                <TextBlock Text="Email ID               :" Grid.Row="1" Grid.Column="3"
                           FontSize="20" FontWeight="DemiBold" Margin="30,0,5,40" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Style="{StaticResource RoundedTextBoxStyle}"
                         Height="38" Margin="200,0,100,40" x:Name="mail"/>

                <!-- Row 2 -->
                <TextBlock Text="PAN No              :" Grid.Row="2" Grid.Column="0"
                           FontSize="20" FontWeight="DemiBold" Margin="0,0,5,0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource RoundedTextBoxStyle}"
                         Height="38" Margin="160,0,100,0" x:Name="pan"/>

                <TextBlock Text="Company Type    :" Grid.Row="2" Grid.Column="3"
                           FontSize="20" FontWeight="DemiBold" Margin="30,0,5,0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Style="{StaticResource RoundedTextBoxStyle}"
                         Height="38" Margin="200,0,100,0" x:Name="type"/>
                
                <Button Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" FontSize="20" Cursor="Hand"
                        Name="Reset" Content="Reset" Style="{StaticResource RoundedButton}"
                        Width="80" Height="30" Margin="130,10,0,0" Click="ResetButton_Click"/>
            </Grid>

        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,310,0,10">
            <!-- Address Block -->
            <Border Background="White"
                    BorderBrush="LightGray"
                    BorderThickness="2"
                    Margin="0,0,10,0"
                    CornerRadius="8"
                    Padding="20"
                    Width="800">
                <StackPanel>
                    <TextBlock Text="Address"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#0A4967"
                       Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Line 1 :" Width="100" VerticalAlignment="Center"/>
                        <TextBox Width="250" Style="{StaticResource RoundedTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Line 2 :" Width="100" VerticalAlignment="Center"/>
                        <TextBox Width="250" Style="{StaticResource RoundedTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Line 3 :" Width="100" VerticalAlignment="Center"/>
                        <TextBox Width="250" Style="{StaticResource RoundedTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Zip Code :" Width="100" VerticalAlignment="Center"/>
                        <TextBox Width="250" Style="{StaticResource RoundedTextBoxStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Other Details Block -->
            <Border Background="White"
                    BorderBrush="LightGray"
                    BorderThickness="2"
                    Margin="10,0,0,0"
                    CornerRadius="8"
                    Padding="20"
                    Width="800">
                <StackPanel>
                    <TextBlock Text="Other Details"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#0A4967"
                       Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Nick Name :" Width="100" VerticalAlignment="Center"/>
                        <TextBox Width="250" Style="{StaticResource RoundedTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Website :" Width="100" VerticalAlignment="Center"/>
                        <TextBox Width="250" Style="{StaticResource RoundedTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Discount(%) :" Width="100" VerticalAlignment="Center"/>
                        <TextBox Width="250" Style="{StaticResource RoundedTextBoxStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
